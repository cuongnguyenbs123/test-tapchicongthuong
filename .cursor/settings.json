{
    "workbench.colorTheme": "Default Dark Modern",
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    "editor.fontFamily": "JetBrains Mono, Consolas, 'Courier New', monospace",
    "editor.lineHeight": 1.6,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.smoothScrolling": true,
    "editor.minimap.enabled": true,
    "editor.minimap.maxColumn": 120,
    "editor.renderWhitespace": "boundary",
    "editor.linkedEditing": true,
  
    "files.autoSave": "onFocusChange",
    "files.autoSaveDelay": 1000,
    "files.exclude": {
      "/.git": true,
      "/.DS_Store": true,
      "/node_modules": true,
      "/coverage": true,
      "/.next": true
    },
  
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "[javascript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "editor.tabSize": 2
    },
    "[javascriptreact]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "editor.tabSize": 2
    },
    "[typescript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "editor.tabSize": 2
    },
    "[typescriptreact]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "editor.tabSize": 2
    },
    "[json]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "editor.tabSize": 2
    },
    "[jsonc]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[scss]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
  
    "cursor.experimental.autocomplete": true,
    "cursor.experimental.chatInline": true,
    "cursor.chat.enabled": true,
    "cursor.chat.context": "full",
    "cursor.general.enableSuggestionQualityCheck": true,
    "cursor.general.completions": "inline",
    "cursor.tab.autocomplete": true,
    "cursor.tab.inline": true,
    "cursor.tab.chat": true,
  
    "typescript.suggest.autoImports": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "typescript.preferences.importModuleSpecifier": "relative",
    "typescript.inlayHints.parameterNames.enabled": "all",
    "typescript.inlayHints.parameterTypes.enabled": true,
    "typescript.inlayHints.variableTypes.enabled": true,
    "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
    "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
    "typescript.preferences.quoteStyle": "single",
    "javascript.suggest.autoImports": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "javascript.preferences.importModuleSpecifier": "relative",
    "javascript.inlayHints.parameterNames.enabled": "all",
    "javascript.inlayHints.parameterTypes.enabled": true,
    "javascript.preferences.quoteStyle": "single",
  
    "eslint.alwaysShowStatus": true,
    "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
    "eslint.workingDirectories": ["./"],
    "eslint.probe": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    },
  
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "git.enableStatusBarSync": true,
    "git.suggestSmartCommit": true,
    "git.confirmForcePush": false,
    "git.showPushSuccessNotification": true,
  
    "editor.acceptSuggestionOnCommitCharacter": true,
    "editor.acceptSuggestionOnEnter": "on",
    "editor.quickSuggestions": {
      "other": "on",
      "comments": "off",
      "strings": "on"
    },
    "editor.suggestSelection": "first",
    "editor.suggest.locale": "vi",
    "editor.wordBasedSuggestions": "matchingDocuments",
    "editor.parameterHints.enabled": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
  
    "search.exclude": {
      "/node_modules": true,
      "/bower_components": true,
      "/.next": true,
      "/coverage": true,
      "/dist": true,
  "/build": true
    },
    "files.watcherExclude": {
      "/.git/objects/": true,
      "/.git/subtree-cache/": true,
      "/node_modules/": true,
      "/.next/**": true
    },
  
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.enablePersistentSessions": true,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.closeOnFileDelete": true,
  
    "emmet.includeLanguages": {
      "typescript": "typescriptreact",
      "javascript": "javascriptreact"
    },
    "emmet.syntaxProfiles": {
      "typescript": "tsx",
      "javascript": "jsx"
    },
  
    "security.workspace.trust.enabled": false,
    "security.workspace.trust.banner": "never",
    "javascript.validate.enable": true,
    "typescript.validate.enable": true,
  
    "editor.hover.enabled": true,
    "editor.hover.delay": 300,
    "problems.showCurrentInStatus": true,
    "extensions.ignoreRecommendations": false,
    "i18n-ally.localesPaths": ["public/locales", "src/i18n"]
  }